@using Grand.Core;
@using Grand.Core.Infrastructure
@using Grand.Framework.Themes
@using Grand.Framework.UI
@using Grand.Services.Helpers;
@inject IWorkContext workContext
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    var supportRtl = workContext.WorkingLanguage.Rtl;
    var themeName = themeContext.WorkingThemeName;
    var isIe8 = userAgentHelper.IsIe8();
    if (isIe8)
    {
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/ie.css", themeName), excludeFromMinification: false);
    }
    //add browser specific CSS files
    if (supportRtl)
    {
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/style.rtl.css", themeName), excludeFromMinification: false);
    }

    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/style.css", themeName), excludeFromMinification: false);
    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/font-awesome.css", themeName), excludeFromMinification: false);
    Html.AppendCssFileParts("~/Content/bootstrap/bootstrap.css");

    Html.AppendScriptParts("~/Content/bootstrap/bootstrap.js");
    Html.AppendScriptParts("~/Scripts/public.ajaxcart.js", excludeFromMinification: false);
    Html.AppendScriptParts("~/Scripts/public.common.js", excludeFromMinification: false);
    Html.AppendScriptParts("~/Scripts/jquery-migrate-1.2.1.min.js");
    Html.AppendScriptParts("~/Scripts/jquery-ui-1.10.3.custom.min.js");
    Html.AppendScriptParts("~/Scripts/jquery.validate.unobtrusive.min.js");
    Html.AppendScriptParts("~/Scripts/jquery.validate.min.js");
    Html.AppendScriptParts("~/Content/bootstrap/tether.min.js");

    Html.AppendScriptParts("~/Scripts/jquery-1.10.2.min.js");

}